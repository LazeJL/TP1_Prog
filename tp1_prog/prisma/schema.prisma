generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int      @id @default(autoincrement())
  slug  String   @unique
  path  String   @unique
  name  String
  desc  String?
  img   String
  price Float
  categoryId Int
  category ProductCategory @relation(fields: [categoryId], references: [id])
}

model ProductCategory {
  id    Int      @id @default(autoincrement())
  slug  String   @unique
  name  String
  products Product[]
}